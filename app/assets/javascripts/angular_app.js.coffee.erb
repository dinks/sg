# GAPI is used for authentication
jQuery ->
  $.ajax(
    url: 'https://apis.google.com/js/client:plus.js?onload=googleLoad'
    dataType: 'script'
    cache: true
  )

window.googleLoad = ->
  gapi.client.setApiKey '<%= ENV["GOOGLE_API_KEY"] %>'

angular
.module 'env', []
.constant 'env',
  'clientId':     '<%= ENV["GOOGLE_CLIENT_ID"] %>'
  'clientSecret': '<%= ENV["GOOGLE_CLIENT_SECRET"] %>'

angular
.module 'sgPicasaViewer',
  [ 'ngResource',
    'ngRoute',
    'ngAnimate',
    'ui.bootstrap',
    'dialogs',
    'env'
  ]
